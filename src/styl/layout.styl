//- module

.w-1200 { width: 1200px }
.w-1024 { width: 1024px }
.w-768  { width: 768px }
.w-640  { width: 640px }
.w-480  { width: 480px }
.h-gr   { height: 61.803398875%!important }
.vh-gr   { height: 61.803398875vh!important }
.vh-75   { height: 75vh!important }
.vh-50   { height: 50vh!important }
.vh-25   { height: 25vh!important }
.w-auto { width: auto!important }
.h-auto { height: auto!important }
.z-1    { z-index: 1 }

.g-1 { gap: .25em }
.g-2 { gap: .5em }
.g-3 { gap: 1em }
.g-4 { gap: 1.5em }
.g-5 { gap: 3em }

._g-1 { --gap: .125em }
._g-2 { --gap: .25em }
._g-3 { --gap: .5em }
._g-4 { --gap: .75em }
._g-5 { --gap: 1.5em }

._g-1, ._g-2, ._g-3, ._g-4, ._g-5
  gap: 0
  & > * { margin-left: var(--gap); margin-right: var(--gap);  }
  & > *:first-child { margin-left: 0; margin-right: var(--gap) }
  & > *:last-child { margin-left: var(--gap); margin-right: 0 }
  & > *:only-child { margin-left: 0!important; margin-right: 0!important }

._g-1.flex-column, ._g-2.flex-column, ._g-3.flex-column, ._g-4.flex-column, ._g-5.flex-column
  gap: 0
  & > * { margin-top: var(--gap); margin-bottom: var(--gap); }
  & > *:first-child { margin-top: 0; margin-bottom: var(--gap) }
  & > *:last-child { margin-top: var(--gap); margin-bottom: 0 }
  & > *:only-child { margin-top: 0!important; margin-bottom: 0!important }


@media (max-width: 1200px) { .w-1200.rwd { width: 90%; margin: auto; } }
@media (max-width: 1024px) { .w-1024.rwd { width: 90%; margin: auto; } }
@media (max-width: 768px) { .w-768.rwd { width: 90%; margin: auto; } }
@media (max-width: 640px) { .w-640.rwd { width: 90%; margin: auto; } }
@media (max-width: 480px) { .w-480.rwd { width: 90%; margin: auto; } }
@media (max-width: 768px) {
  .w-manual.rwd { width: 90%!important; margin: auto; }
  .h-100.rwd { height: auto!important; }
}

.vertical-center, .vertical-bottom { width: 100%; height: 100%; white-space: nowrap }
.vertical-center > *
  vertical-align: middle
  white-space: normal
  display: inline-block

.vertical-bottom > *
  vertical-align: bottom
  white-space: normal
  display: inline-block

.vertical-center:before, .vertical-bottom:before
  content: ""
  display: inline-block
  vertical-align: middle
  width: 0
  height: 100%

.sticky
  position: -webkit-sticky
  position: sticky
  top: 80px

.aspect-ratio
  position: relative
  width: 100%
  padding-top: 100%
  & > *
    position: absolute!important
    top: 0
    left: 0
    right: 0
    bottom: 0

.ratio-1by1
  padding-top: 100%!important
.ratio-4by3
  padding-top: 75%!important
.ratio-3by2
  padding-top: 66.6667%!important
.ratio-16by9
  padding-top: 56.25%!important
.ratio-2by1
  padding-top: 50%!important

.rounded-xl
  border-radius: 1rem!important
.rounded-max
  border-radius: 100rem!important

.splash
  z-index: zidx(splash,"min")
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%

.flex-placeholder
  visibility: hidden
  pointer-events: none
  opacity: 0
