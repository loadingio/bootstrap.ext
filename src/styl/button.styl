//- module
.btn.btn-text
  cursor: default

.btn.disabled
  cursor: not-allowed

.btn.btn-radio:before
  margin-right: .33em
  display: inline
  font-family: ldi
  content: "\f052"
.btn.btn-radio.active:before
  content: "\f051"
.btn.btn-radio.check:before
  content: "\f054"
.btn.btn-radio.check.active:before
  content: "\f053"
  
.btn-group.flex
  display: flex
  flex-wrap: nowrap
  .btn
    flex: 1 1 auto

.btn-upload
  position: relative
  cursor: pointer
  overflow: hidden
  input
    position: absolute
    width: 100%
    height: 100%
    zidx(base, "max")
    top: 0
    left: 0
    opacity: 0.005
    cursor: pointer

.btn-color
  padding-left: .375rem
  padding-right: .375rem
  div
    width: 100%
    min-width: 1.5em
    height: 1.5em
    background: #ccc

.btn-color.btn-lg div
  height: 28px
::-webkit-file-upload-button
  cursor: pointer
  height: 100%
  border: 0
