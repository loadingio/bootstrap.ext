//- module

.sep
  margin: 1em auto
  border-top: 1px solid rgba(0,0,0,.1)
  width: 100%
  height: 0
  &:before, &:after
    border-top: 0px solid rgba(0,0,0,.1)
.sep.sep-dashed
  border-top-style: dashed
  &:before, &:after
    border-top-style: dashed
.sep.sep-light
  border-top-color: rgba(255,255,255,.1)
  &:before, &:after
    border-top-color: rgba(255,255,255,.1)
.sep.sep-dark
  border-top-color: rgba(0,0,0,.5)
  &:before, &:after
    border-top-color: rgba(0,0,0,.5)

.sep.sep-text
  display: flex
  flex-wrap: nowrap
  border: none
  span
    position: relative
    top: -.76em
    padding: 0 .5em
    display: inline-block
    white-space: nowrap
  &:before, &:after
    content: " "
    display: block
    border-top-width: 1px
    width: 50%
